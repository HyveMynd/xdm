  "$id": "https://ns.adobe.com/experience/profile/segmentdefinition",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Adobe Unified Profile Segment Definition Mixin",
  "type": "object",
  "description": "Adobe Unified Profile Segment Definition mixin.",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": [
    "https://ns.adobe.com/xdm/context/segmentdefinition"
  ],
  "definitions": {
    "segmentdefinition": {
      "properties": {
        "xdm:imsOrgId": {
          "title": "IMS Org Id",
          "type": "string",
          "description": "The IMS Org Id this belongs to"
        },
        "xdm:mergePolicyId": {
          "title": "Merge Policy Id",
          "type": "string",
          "description": "The merge policy which is used"
        },
        "xdm:schema": {
          "title": "Schema",
          "type": "object",
          "properties": {
            "xdm:name": {
              "title": "XDM Schema Name",
              "type": "string",
              "description": "The XDM schema name"
            }
          }
        },
        "xdm:ttlInDays": {
          "title": "TTL (Days)",
          "type": "integer",
          "description": "Time to live in days for a segment"
        },
        "xdm:updateEpoch": {
          "title": "Update Epoch",
          "type": "integer",
          "description": "Last epoch the segment was updated"
        },
        "xdm:updateTime": {
          "title": "Update Time",
          "type": "integer",
          "description": "Last time the segment was updated"
        },
        "xdm:creationTime": {
          "title": "Creation Time",
          "type": "integer",
          "description": "The time the segment was created"
        },
        "xdm:builderModel": {
          "title": "Segment Builder Model",
          "type": "string",
          "description": "Hash of internal model"
        },
        "xdm:sandbox": {
          "title": "Sandbox",
          "type": "object",
          "properties": {
            "xdm:default": {
              "title": "Default",
              "type": "boolean",
              "description": "Is default"
            },
            "xdm:sandboxId": {
              "title": "Sandbox Id",
              "type": "string",
              "description": "ID of the sandbox"
            },
            "xdm:sandboxName": {
              "title": "Sandbox Name",
              "type": "string",
              "description": "Name of the sandbox"
            },
            "xdm:type": {
              "title": "Type",
              "type": "string",
              "description": "Sandbox Type"
            }
          }
        },
        "xdm:evaluationInfo": {
          "title": "Evaluation Info",
          "type": "object",
          "properties": {
            "xdm:batch": {
              "title": "Batch",
              "type": "object",
              "properties": {
                "xdm:enabled": {
                  "title": "Enabled",
                  "type": "boolean",
                  "description": "Is Enabled"
                }
              }
            },
            "xdm:continuous": {
              "title": "Batch",
              "type": "object",
              "properties": {
                "xdm:enabled": {
                  "title": "Enabled",
                  "type": "boolean",
                  "description": "Is Enabled"
                }
              }
            },
            "xdm:synchronous": {
              "title": "Batch",
              "type": "object",
              "properties": {
                "xdm:enabled": {
                  "title": "Enabled",
                  "type": "boolean",
                  "description": "Is Enabled"
                }
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/context/segmentdefinition-expression"
    },
    {
      "$ref": "#/definitions/segmentdefinition"
    }
  ],
  "meta:status": "experimental"
}
